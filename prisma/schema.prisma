generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model txnData {
  id                        String    @id @default(cuid())
  roomId                    String
  privyWalletAddress        String
  firstTxnHash              String
  firstTxnStatus            TxnStatus
  firstTxnEstTime           DateTime
  secondStepApprovalAddress String
  secondStepApprovalAmount  String
  secondTxnData             Json
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
}

enum TxnStatus {
  PENDING
  SUCCESS
  FAILED
}
